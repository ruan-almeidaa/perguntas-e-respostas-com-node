<%-include ('partials/header.ejs') %>
<body>

    <%-include ('partials/navbar.ejs') %>

    <div class="container">
        <hr>
        <h1> <%= pergunta.titulo %> </h1>
        <p> <%= pergunta.descricao %> </p>
        <hr>

        <form action="/salvarresposta" method="post">
            <h5>Quer ajudar? Responda agora mesmo</h5>
            <br>
            <label for="corpo-resposta">Resposta</label>
            <textarea placeholder="Digite sua resposta" required class="form-control" name="corpo" id="corpo-resposta" cols="30" rows="10"></textarea>
            <br>
            <input type="hidden" readonly value="<%= pergunta.idPergunta %>" name="perguntaId">
            <button type="submit" class="btn btn-primary">Enviar resposta</button>
        </form>

        <hr>
        <h3>Respostas</h3>
        <hr>
        <% respostas.forEach(resposta => { %>
            <br>
            <div class="card">
                <div class="card-body">
                    <p><%= resposta.corpo %></p>
                </div>
            </div>
        <%  }) %>

        
    </div>
    

</body>
<% -include ('partials/footer.ejs') %>
