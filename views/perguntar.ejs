<%-include ('partials/header.ejs') %>
<body>

    <%-include ('partials/navbar.ejs') %>

    <div class="container">
        <div class="card" id="formularioPergunta">
            <div class="card-header">
                <h3>Realizar pergunta!</h3>
                <hr>
            </div>

            <div class="card-body">
                <form method="post" action="/salvarpergunta">
                    <label for="tituloPergunta">Título</label>
                    <input type="text" class="form-control" placeholder="Dê um título para sua pergunta" name="titulo" id="tituloPergunta" required>
                    <br>
                    <label for="descricaoPergunta">Descrição</label>
                    <textarea placeholder="Descreva sua pergunta" class="form-control"name="descricao" id="descricaoPergunta" required cols="30" rows="10"></textarea>
                    <br>
                    <button class="btn btn-primary">Perguntar</button>
                </form>
            </div>
        </div>
       
        
        
    </div>
    

</body>
<% -include ('partials/footer.ejs') %>
